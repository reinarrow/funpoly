@using Funpoly.Services
@using Funpoly.Data.Models

@inject IGameManager gameManager

<Column>
    <Heading Size="HeadingSize.Is3" Alignment="TextAlignment.Center ">Lista de equipos</Heading>
    @foreach (var team in gameManager.GetGame().Teams)
    {
        <TeamListItem Team="team"></TeamListItem>
    }
    <GenericButton Disabled="gameManager.GetGame().Teams.Count < 2"
                   Text="¡Listo!"
                   OnClick="@OnButtonClick"></GenericButton>
</Column>