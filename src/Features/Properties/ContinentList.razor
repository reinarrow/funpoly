@using Funpoly.Data.Models
@using Funpoly.Data.Repositories.Interfaces
@inject IRepository<Continent> continentRepository

@if (@isInitialized)
{
    <Column>
        @foreach (var continent in continents)
        {
            <Heading Size="HeadingSize.Is4" Alignment="TextAlignment.Center">@continent.Name</Heading>
            <ParcelList Continent="@continent"></ParcelList>
        }
    </Column>
}