@using Funpoly.Core
@inject IGameManager gameManager

@if (isInitialized)
{
    <Row>
        @foreach (var postcard in postcards.GetRange(0, 2))
        {
            <Column Style="display: flex; justify-content: center">
                <PostcardItem Team="@Team" Postcard="@postcard"></PostcardItem>
            </Column>
        }
    </Row>

    <Row>
        @foreach (var postcard in postcards.GetRange(2, 2))
        {
            <Column Style="display: flex; justify-content: center">
                <PostcardItem Team="@Team" Postcard="@postcard"></PostcardItem>
            </Column>
        }
    </Row>
}