@using Funpoly.Data.Models
@using Funpoly.Data.Repositories.Interfaces
@inject IRepository<Continent> continentRepository

@if (@isInitialized)
{
    <Row>
        @foreach (var continent in continents.GetRange(0, 2))
        {
            <Column>
                <Heading Size="HeadingSize.Is4" Alignment="TextAlignment.Center">@continent.Name</Heading>
                <TravelContinentListItem Team="@Team" Continent="@continent"></TravelContinentListItem>
            </Column>
        }
    </Row>

    <Row>
        @foreach (var continent in continents.GetRange(2, 2))
        {
            <Column>
                <Heading Size="HeadingSize.Is4" Alignment="TextAlignment.Center">@continent.Name</Heading>
                <TravelContinentListItem Team="@Team" Continent="@continent"></TravelContinentListItem>
            </Column>
        }
    </Row>
}